                    </thead>
                    <tbody id="data-table">
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-7">
                <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                    <ul class="pagination" id="pagination">
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="data-template" type="x-tmpl-mustache">
    <tr role="row" class="odd">
        <td>{{UserName}}</td>
        <td>{{Name}}</td>
        <td>{{Email}}</td>
        <td>{{Phone}}</td>
        <td>{{Address}}</td>
        <td>{{{Status}}}</td>
        <td>
            <button class="btn btn-primary btn-edit" data-id="{{ID}}">Sửa</button>
            <button class="btn btn-danger btn-delete" data-id="{{ID}}">Xóa</button>
        </td>
    </tr>
</script>
