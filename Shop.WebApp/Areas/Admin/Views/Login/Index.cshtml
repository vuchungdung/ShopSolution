@model Shop.WebApp.Areas.Admin.Models.LoginViewModel
@{
    Layout = null;
}

    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>AdminLTE 3 | Log in</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/Areas/Admin/Assests/plugins/fontawesome-free/css/all.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- icheck bootstrap -->
        <link rel="stylesheet" href="~/Areas/Admin/Assests/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/Areas/Admin/Assests/dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
    <body class="login-page" style="min-height: 512.391px;">
        <div class="login-box">
            <div class="login-logo">
                <a href="#"><b>ECommerce</b></a>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Đăng Nhập Để Bắt Đầu</p>

                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false)
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model.userName, new { @class = "form-control", @id = "username", @autofocus = "autofocus", @placeholder = "Nhập tài khoản..." })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            @Html.PasswordFor(model => model.passWord, new { @class = "form-control", @id = "password", @placeholder = "Nhập mật khẩu..." })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div>
                                    @Html.CheckBoxFor(model => model.RememberMe)
                                    <label for="remember">
                                        Nhớ mật khẩu
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" style="width:108px;height:38px;" onclick = "return validateForm()" class="btn btn-primary btn-block">Đăng Nhập</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }

                    <div class="social-auth-links text-center mb-3">
                        <p>- OR -</p>
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Đăng nhập với Facebook
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i> Đăng nhập với Google+
                        </a>
                    </div>
                    <!-- /.social-auth-links -->

                    <p class="mb-1">
                        <a href="forgot-password.html">Quên mật khẩu?</a>
                    </p>
                    <p class="mb-0">
                        <a href="register.html" class="text-center">Đăng ký tài khoản</a>
                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <!-- /.login-box -->
        <!-- jQuery -->
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Areas/Admin/Assests/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/Areas/Admin/Assests/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/Areas/Admin/Assests/dist/js/adminlte.min.js"></script>
        <script src="~/App/Login/ValidationLogin.js"></script>
    </body>
    </html>
